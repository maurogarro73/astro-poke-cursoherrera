---
interface Props {
  url: string;
  name: string;
  isBig?: boolean;
}
const { name, url, isBig = false } = Astro.props;
const id = url.split('/').at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/dream-world/${id}.svg`;
---

<!-- href={`/pokemons/${name}`} --><!-- href={`/pokemon/${id}`} -->
<a href={`/pokemons/${name}`} class:list={[`rounded flex flex-col justify-center items-center p-2 mt-5`, { border: !isBig }]}>
  <!-- transition:name={`${name}-image`} logra el efecto de animaciÃ³n desde la posicion de la imagen hasta que se agrande -->
  <img
    transition:name={`${name}-image`}
    src={imageSrc}
    alt={name}
    class:list={[{ 'w-22 h-22': !isBig }, { 'w-26 h-26': isBig }]}
  />

  <span class:list={[`capitalize`, { 'text-4xl text-blue-300': isBig }]}>#{id} {name}</span>
</a>
